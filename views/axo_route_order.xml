<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="axo_route_order_tree_view">
      <field name="name">axo route order tree view</field>
      <field name="model">axo.route.order</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="partner_id"/> 
          <field name="priority"/>
          <field name="employee_id"/>
          <field name="planened_date_begin"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="axo_route_order_form_view">
      <field name="name">axo route order formview</field>
      <field name="model">axo.route.order</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="priority" widget="priority"/>
              <field name="partner_id"/>
              <field name="partner_shipping_id"/>
              <field name="planened_date_begin"/>
              <field name="planned_date_real"/>
              <field name="type_id" widget="statusbar" clickable="true"/>
              <field name="tracking_tag_id" widget="many2many_tags"/>
              <field name="employee_id"/>
            </group>
         </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="axo_route_order_pivot_view">
      <field name="name">axo.route.order.pivot.view</field>
      <field name="model">axo.route.order</field>
      <field name="arch" type="xml">
       <pivot>
          <field name="priority"/>
          <field name="partner_id"/>
          <field name="planened_date_begin"/>
          <field name="planned_date_real" />
          <field name="type_id"/>
          <field name="tracking_tag_id"/>
          <field name="employee_id"/>  
       </pivot>
      </field>
    </record>

    <record model="ir.ui.view" id="axo_route_order_calendar_view">
      <field name="name">axo route order calendar view</field>
      <field name="model">axo.route.order</field>
      <field name="arch" type="xml">
        <calendar date_start="request_date" >
          <field name="name"/>
            <field name="priority"/>
            <field name="partner_id"/>
            <field name="planened_date_begin"/>
            <field name="planned_date_real"/>
            <field name="type_id" />
            <field name="tracking_tag_id"/>
            <field name="employee_id"/>          
        </calendar>
      </field>
    </record>


    <record id="axo_route_order_search" model="ir.ui.view">
        <field name="name">axo.route.search</field>
        <field name="model">axo.route.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
            </search>
        </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="axo_route_order_action">
      <field name="name">axo.route.order</field>
      <field name="res_model">axo.route.order</field>
      <field name="view_mode">tree,form</field>
    </record>



    <record model="ir.actions.act_window" id="axo_route_order_pivot_action">
      <field name="name">axo route order pivot</field>
      <field name="res_model">axo.route.order</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_mode">pivot</field>
    </record>
    
    <record model="ir.actions.act_window" id="axo_route_order_calendar_action">
      <field name="name">axo route order calendar</field>
      <field name="res_model">axo.route.order</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_mode">calendar</field>
    </record>

    <!-- actions -->

    <menuitem name="route order" id="axo_route_order_menu_1_list"
    parent="axo_zone_menu_1"
    action="axo_route_order_action"/>
    

    
    <menuitem name="pivot" 
    id="axo_route_order_pivot" 
    parent="axo_zone_menu_1"          
    action="axo_route_order_pivot_action"/>
    
    <menuitem name="calendar" 
    id="axo_route_order_calendar" 
    parent="axo_zone_menu_1"          
    action="axo_route_order_calendar_action"/>
   
   <!--
    <menuitem name="Server to list" id="axo_tracking" parent="axo_tracking.menu_2"
              action="axo_tracking.action_server"/>
-->
  </data>
</odoo>